<h1> bilhin na ang <%= params[:search] || params[:domain_name] %></h1>

<h2><%= @new_domain %></h2>
<h2></h2>
<%= "#{params[:search]}.com" %>

  <style>
    .disable{
      opacity: 0.3;
    }
  </style>
  <% if params[:search] %>
      <table>
        <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>


            <tr <%= @check.available?("#{params[:search]}.com") ? '' : 'class="disable"' %>>
          <%= form_tag new_registrant_path, :method => 'get' do %>
              <%= hidden_field_tag(:domain_name,"#{params[:search]}")%>
              <td><%= params[:search] || params[:domain_name] %></td>
              <td><%= select_tag(:span, options_for_select([['1 Year',1],['2 years',2],['5 years',5],['10 years',10]])) %></td>
              <td><%= submit_tag "Buy"%></td>
          <% end %>
            </tr>



        </tbody>
      </table>

  <% end %>
